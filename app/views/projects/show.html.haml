.row
  .col-md-8
    %p
      = render 'project_headers', project: @project

    = markdown @project.description

    %ul.list-inline
      - if can? :edit, @project
        %li= link_to "Edit project", [:edit, @brand, @project], class: "btn btn-default"
      - if can? :delete, @project
        %li= link_to "Delete project", [@brand, @project], method: "delete", class: "btn btn-link text-danger", "data-confirm" => "Are you sure you want to completely remove #{@project.title}?"

  .col-md-4
    .panel.panel-default
      .panel-heading
        %h2{style: "margin: 0"} Downloads
      .panel-body
        %ul.project-files.list-unstyled
          = render @project.project_files

        - if can? :edit, @project
          .well.s3-upload{"data-aws-access-key-id" => ENV['AWS_ACCESS_KEY_ID'], "data-signer-url" => url_for([:auth_upload, @brand, @project, :project_files]), "data-bucket" => (ENV['AWS_S3_BUCKET'] || "larp-library-#{Rails.env}"), "data-nonce" => SecureRandom.hex, "data-complete-callback-url" => url_for([@brand, @project, :project_files]), "data-temporary-session-token" => @temporary_session_token}
            %label{for: "file"} Upload files
            = file_field_tag :file, multiple: true

        - license = @project.license_object
        - if license
          - dedication = capture do
            - if license[:dedication_html]
              =raw license[:dedication_html]
            - else
              This work is licensed under a
              = succeed '.' do
                %a{rel: "license", href: license.url}= license.name
                license

          - if license.logo_url
            .media
              .media-left.media-middle
                %a{rel: "license", href: license.url}
                  %img{alt: license.name, style: "border-width:0", src: license.logo_url}
              .media-body= dedication
          - else
            = dedication

