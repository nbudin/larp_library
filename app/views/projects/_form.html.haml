= form_for @project do |f|
  .form-group
    = f.label :title
    = f.text_field :title, class: 'form-control'
  
  .form-group
    = f.label :authors
    = f.text_field :authors, class: 'form-control'
    
  .form-group
    = f.label :tags
    = f.select :tag_names, f.object.tag_names, {}, class: 'form-control tag-selector', multiple: true
    
  .form-group
    = f.label :description do
      Description
      %small (Markdown allowed)
    = f.text_area :description, class: 'form-control ace-editor', style: 'height: 6em;', rows: 6
  
  = f.submit class: 'btn btn-default'