.panel.panel-default
  .panel-heading
    - if can? :edit, project
      .pull-right
        = link_to "Admin", project, class: "btn btn-default"
      
    %h2{style: "margin: 0"}= project.title
    
    - if project.authors.present?
      %p{style: "margin: 0"}
        %em By #{project.authors}
  .panel-body    
    .row
      .col-md-8
        = simple_format project.description
      .col-md-4
        %ul.project-files
          - project.project_files.each do |project_file|
            %li
              = link_to project_file.filename, project_file.url
              %small (#{number_to_human_size project_file.filesize})